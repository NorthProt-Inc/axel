{
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"**/node_modules",
			"**/dist",
			"**/build",
			"**/.turbo",
			"**/coverage",
			"**/*.log",
			"**/.env",
			"**/.env.*",
			"**/apps/webchat/.svelte-kit/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100,
		"lineEnding": "lf"
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noExcessiveCognitiveComplexity": "warn",
				"noForEach": "off",
				"useLiteralKeys": "off"
			},
			"style": {
				"useConst": "error",
				"useTemplate": "warn",
				"noNonNullAssertion": "warn"
			},
			"performance": {
				"noDelete": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noArrayIndexKey": "warn"
			}
		}
	},
	"overrides": [
		{
			"include": ["**/*.svelte"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off"
					}
				}
			}
		}
	],
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all",
			"arrowParentheses": "always"
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab"
		},
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": true
		}
	}
}
