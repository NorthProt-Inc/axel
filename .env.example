# Project Axel — Environment Variables
# Copy to .env and fill in your values
# See apps/axel/src/config.ts for full schema (AxelConfigSchema)

# ─── Required ───

# Database
AXEL_DB_URL=postgresql://axel:axel_dev_password@localhost:5432/axel

# Redis
AXEL_REDIS_URL=redis://localhost:6379

# LLM API Keys
AXEL_ANTHROPIC_API_KEY=
AXEL_GOOGLE_API_KEY=

# ─── Optional ───

# Server
# AXEL_ENV=development
# AXEL_PORT=8000
# AXEL_HOST=0.0.0.0

# Gateway (enables HTTP/WS API when auth token is set)
# AXEL_GATEWAY_AUTH_TOKEN=
# AXEL_GATEWAY_CORS_ORIGINS=http://localhost:3000

# Channels
# AXEL_DISCORD_BOT_TOKEN=
# AXEL_TELEGRAM_BOT_TOKEN=

# LLM Models (defaults shown)
# AXEL_ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
# AXEL_ANTHROPIC_MAX_TOKENS=16384
# AXEL_GOOGLE_FLASH_MODEL=gemini-3-flash-preview
# AXEL_GOOGLE_EMBEDDING_MODEL=gemini-embedding-001
# AXEL_GOOGLE_EMBEDDING_DIMENSION=1536

# Persona
# AXEL_PERSONA_PATH=./data/dynamic_persona.json

# Security
# AXEL_MAX_REQUESTS_PER_MINUTE=30
